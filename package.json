{
  "name": "rollup-plugin-chrome-extension",
  "version": "4.0.1-12",
  "description": "Build Chrome Extensions with this Rollup plugin.",
  "keywords": [
    "rollup-plugin",
    "vite-plugin",
    "chrome",
    "chrome-extension",
    "extension",
    "webext",
    "webextension",
    "browser",
    "browser-extension"
  ],
  "repository": {
    "url": "https://github.com/extend-chrome/rollup-plugin-chrome-extension.git"
  },
  "license": "MIT",
  "author": "Jack and Amy Steam <jacksteamdev@gmail.com>",
  "main": "lib/index-cjs.js",
  "module": "lib/index-esm.js",
  "types": "types/src/index.d.ts",
  "files": [
    "lib",
    "types",
    "manifest.schema.json",
    "schema"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:types": "tsc -p tsconfigs/tsconfig-types.json",
    "dev:build": "rollup -c -w",
    "dev:lint": "npm run lint:types -- --watch",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ext js --ext ts --ext tsx",
    "lint:types": "tsc --noEmit",
    "prepublishOnly": "run-p build build:types",
    "postpublish": "rm -rf node_modules package-lock.json && pnpm i",
    "test": "jest --testPathIgnorePatterns=\"/node_modules/|e2e|mv2\"",
    "test:ci": "run-s test:ci:*",
    "test:ci:src": "jest --runInBand --testPathIgnorePatterns=\"/node_modules/|e2e\" --testPathPattern=\"src\"",
    "test:ci:mv2": "run-s test:ci:mv3:*",
    "test:ci:mv2:rollup": "node --expose-gc ./node_modules/jest/bin/jest.js --logHeapUsage --runInBand --testPathIgnorePatterns=\"/node_modules/|e2e\" --testPathPattern=\"mv2.+?rollup\"",
    "test:ci:mv2:build": "node --expose-gc ./node_modules/jest/bin/jest.js --logHeapUsage --runInBand --testPathIgnorePatterns=\"/node_modules/|e2e\" --testPathPattern=\"mv2.+?build\"",
    "test:ci:mv2:serve": "node --expose-gc ./node_modules/jest/bin/jest.js --logHeapUsage --runInBand --testPathIgnorePatterns=\"/node_modules/|e2e\" --testPathPattern=\"mv2.+?serve\"",
    "test:ci:mv3": "run-s test:ci:mv3:*",
    "test:ci:mv3:rollup": "node --expose-gc ./node_modules/jest/bin/jest.js --logHeapUsage --runInBand --testPathIgnorePatterns=\"/node_modules/|e2e\" --testPathPattern=\"mv3.+?rollup\"",
    "test:ci:mv3:build": "node --expose-gc ./node_modules/jest/bin/jest.js --logHeapUsage --runInBand --testPathIgnorePatterns=\"/node_modules/|e2e\" --testPathPattern=\"mv3.+?build\"",
    "test:ci:mv3:serve": "node --expose-gc ./node_modules/jest/bin/jest.js --logHeapUsage --runInBand --testPathIgnorePatterns=\"/node_modules/|e2e\" --testPathPattern=\"mv3.+?serve\"",
    "test:full": "jest --testPathIgnorePatterns=\"/node_modules/|e2e\"",
    "test:mv2": "jest test.mv2",
    "test:e2e": "jest --runInBand --forceExit e2e"
  },
  "dependencies": {
    "@rollup/pluginutils": "^4.1.1",
    "@types/acorn": "^4.0.6",
    "@types/csp-dev": "^1.0.0",
    "@types/etag": "^1.8.1",
    "@types/jsesc": "^3.0.1",
    "@types/lodash": "^4.14.172",
    "acorn-walk": "^8.2.0",
    "ajv": "^8.6.2",
    "array-flat-polyfill": "^1.0.1",
    "cheerio": "1.0.0-rc.10",
    "convert-source-map": "^1.7.0",
    "cosmiconfig": "^7.0.0",
    "csp-dev": "^1.0.1",
    "esbuild": "^0.14.0",
    "esbuild-runner": "^2.2.0",
    "etag": "^1.8.1",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.6",
    "jsesc": "^3.0.2",
    "json-ptr": "^3.0.0",
    "jsonpath-plus": "^6.0.0",
    "localforage": "^1.9.0",
    "lodash": "^4.17.21",
    "magic-string": "^0.25.7",
    "mem": "^6.0.1",
    "read-pkg-up": "^8.0.0",
    "rollup": "^2.61.1",
    "rxjs": "^7.3.0",
    "slash": "^4.0.0",
    "type-fest": "^2.2.0",
    "webextension-polyfill": "^0.8.0",
    "xstate": "^4.26.1"
  },
  "devDependencies": {
    "@extend-chrome/messages": "1.2.2",
    "@extend-chrome/storage": "1.5.0",
    "@rollup/plugin-alias": "3.1.8",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.1.1",
    "@testing-library/dom": "8.11.1",
    "@testing-library/jest-dom": "5.16.5",
    "@types/chrome": "0.0.176",
    "@types/fs-extra": "9.0.13",
    "@types/glob": "7.2.0",
    "@types/jest": "27.0.3",
    "@types/jest-in-case": "1.0.5",
    "@types/lodash.difference": "4.5.6",
    "@types/lodash.flatten": "4.4.6",
    "@types/lodash.get": "4.4.6",
    "@types/node": "16.11.17",
    "@types/prettier": "2.4.2",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/ws": "8.2.2",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "@vitejs/plugin-react": "1.1.3",
    "@xstate/inspect": "0.5.2",
    "eslint": "6.8.0",
    "eslint-plugin-react": "7.28.0",
    "jest": "27.4.5",
    "jest-chrome": "0.7.2",
    "jest-html-reporters": "2.1.7",
    "jest-in-case": "1.0.2",
    "npm-run-all": "4.1.5",
    "playwright-chromium": "1.17.1",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rollup-plugin-bundle-imports": "1.5.1",
    "rollup-plugin-esbuild": "^4.7.2",
    "tslib": "2.3.1",
    "typescript": "4.5.4",
    "vite": "2.7.13",
    "vite-plugin-inspect": "0.3.11",
    "ws": "8.4.0"
  },
  "peerDependencies": {
    "vite": "^2.5.10"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "np": {
    "testScript": "test:ci"
  }
}
